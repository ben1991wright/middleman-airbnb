<% flat = data.flats[owner] %>

<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>

<div class="container">
  <div class="info">
    <div class="left-info">
      <div class="user text-center">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar-flat" %>
        <p><%= owner %></p>
      </div>
      <div class="location">
        <h3><%= flat.description %></h3>
        <p><%= flat.city_name %></p>
        <p>
          <% flat.rating.times do %>
            <i class="fa fa-star"></i>
          <% end %>
        </p>
      </div>
    </div>
    <div class="right-info">
      <form action="#" class="booking">
        <h2>Book this flat</h2>
        <div class="form-group">
          <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="Checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="Checkout">
              </div>
          </div>
        </div>
        <div class="form-group">
          <select name="" id="" class="form-control">
            <option value="one">1 person</option>
            <option value="two">2 persons</option>
            <option value="three">3 persons</option>
          </select>
        </div>
        <input type="submit" class="btn btn-success" value="Book it">
      </form>
    </div>
  </div>
</div>

<p><%= flat.name %></p>


